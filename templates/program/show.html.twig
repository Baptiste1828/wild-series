{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="row" style="width: 100%;">
        <div class="col m-3" style="width: 40%; height: 500px;">
            <img src="{{program.poster}}" alt="{{ program.title }} poster">
        </div>
        <div class="col m-3 d-flex flex-column" style="width: auto;">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>{{ program.synopsis }}</p>
            <div class="mt-auto m-3">
                <a class="btn btn-primary" href="{{ path('program_index') }}">Retour à la liste des programmes</a>
            </div>
        </div>
    </div>
    <h2 class="mx-5"><strong>Saisons :</strong></h2>
    <div class="list-group list-season">

        {% for season in program.seasons %}

            <a class="list-group-item list-group-item-action list-group-item-primary m-5 rounded" style="width: 100px;" href="{{ path('program_season_show', { program: program.id, season: season.id }) }}">Saison {{ season.number }}</a>

        {% endfor %}

    </div>
    <h2 class="mx-5"><strong>Acteurs :</strong></h2>
    <div class="list-group list-season">

        {% for actor in program.actors %}

            <a class="list-group-item list-group-item-action list-group-item-primary m-5 rounded" style="width: auto;" href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a>

        {% else %}

            <li>Aucun acteur pour cette série</li>

        {% endfor %}

    </div>

{% endblock %}
