{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-4">
            <h1>{{ actor.name }}</h1>
            <a class="btn btn-primary" href="{{ path("actor_index") }}">Retour aux acteurs</a>
        </div>
        <div class="list-group">

        {% for program in actor.programs %}

            <a class="list-group-item row py-4 my-3 list-group-item-action list-group-item-primary rounded list-program" href="{{ path('program_show', { slug: program.slug }) }}">
                <h2 class="card-title">"{{ program.title }}"</h2>
                <h4 class="card-subtitle text-muted">{{ program.category.name }}</h4>
                <p class="card-text episode-text">{{ program.synopsis }}</p>
            </a>

        {% endfor %}

        </div>
    </div>

{% endblock %}
