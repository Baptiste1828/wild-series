{% extends 'base.html.twig' %}

{% block title %}All actorss{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mx-3 my-3">
        <h1>Tous les acteurs : </h1>
        <div>
            <a class="btn btn-primary mx-3" href="{{ path('app_index') }}">Retour à l'accueil</a>
        </div>
    </div>

    {% for actor in actors %}

        <div class="card mx-3 my-3 border border-0">
            <div class="card-body">
                <h2 class="card-title">{{ actor.name }}</h2>
                <a class="btn btn-primary" href="{{ path("actor_show", { id: actor.id }) }}">Voir la fiche</a>
            </div>
        </div>

    {% else %}

        Aucun acteur trouvé.

    {% endfor %}

{% endblock %}