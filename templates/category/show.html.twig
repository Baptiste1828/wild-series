{% extends 'base.html.twig' %}

{% block title %}Série #{{ category_name }}{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mx-3 my-3">
        <h1 ><strong>Catégorie: {{ category_name }}</strong></h1>
        <div >
            <a class="btn btn-primary mx-3" href="{{ path('category_index') }}">Retour à la liste des catégories</a>
        </div>
    </div>

    {% for program in programs %}

        <div class="card mx-3 my-3 border border-0">
            <div class="card-body">
                <h2 class="card-title">"{{ program.title }}"</h2>
                <p class="card-text">{{ program.synopsis }}</p>
                <a class="btn btn-primary" href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
            </div>
        </div>
    
    {% else %}

        <p class="text-center">Aucune série trouvée.</p>
    
    {% endfor %}

{% endblock %}
